<% include ./partials/header.ejs %>
  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
      <p class="header">Log in to see more</p>

      <% if (error && error.length > 0) { %>
        <p class="error"> <%= error[0] %> </p>
      <% } %>
      


      <form action="/login" method="post">
        <!-- <input type="email" name="email" placeholder="Email" class="detail" /><br /> -->
        <input type="text" name="username" placeholder="Username" class="detail" /><br />
        <!-- <input type="text" name="fullname" placeholder="FullName" class="detail" /> -->
        <input type="password" name="password" placeholder="Password" class="detail" /><br />
        <input type="submit" class="btn int" value="Login to Your Account">
      </form>

      <a Forgot href="/forgot">Forgot your password?</a>

     
     

      <footer>
        <p>
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
        <a href="/">Not on Pinterest yet? Sign up</a>
      </footer>
    </div>
  </div>
