<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 p-5 text-white">
    <h1 class="text-xl"> Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data" >
        <input class="block w-1/3 px-3 py-2 text-black" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 text-black rounded-md mt-3" type="text" placeholder="Title" name="title">

        <input class="block w-1/3 px-3 py-2 text-black rounded-md mt-3" type="text" placeholder="Description" name="description">
        <input class="block w-1/3 px-3 py-2  rounded-md mt-3 bg-red-700" type="submit" value="Create post">
    </form>
</div>

