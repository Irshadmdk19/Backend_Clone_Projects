<% var nav = true; %>
<% include ./partials/header.ejs %>
 
    <div class="w-full min-h-screen bg-zinc-800 text-white">
        <div class="cards flex flex-wrap gap-10">
            <%posts.forEach(function(elem){ %>
            <div>
                <div class="card w-32 h-40 bg-zinc-700 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                <h6 class="text-xs font-semibold opacity-700">@<%=elem.user.username %></h6>
            </div>
        <% }) %>
        </div>

    </div>

<% include ./partials/footer.ejs %>